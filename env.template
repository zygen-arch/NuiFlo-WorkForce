# Environment
ENVIRONMENT=production
DEBUG=false

# Database Configuration (Supabase)
# Option 1: Individual components
DB_USER=postgres
DB_PASSWORD=your_supabase_db_password
DB_HOST=db.your-project-ref.supabase.co
DB_PORT=5432
DB_NAME=postgres

# Option 2: Full DATABASE_URL (preferred for cloud deployments)
# DATABASE_URL=postgresql+psycopg://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres?sslmode=require

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# LLM API Keys (for hybrid system)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama Configuration (local on VPS)
OLLAMA_HOST=http://host.docker.internal:11434
OLLAMA_MODEL=deepseek-coder:6.7b

# Hybrid LLM Settings
DEFAULT_QUALITY_PREFERENCE=balanced
MAX_BUDGET_PER_TASK=1.0

# CORS Origins (add your frontend domains)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","https://nuiflo.com","https://*.vercel.app"]

# Server Configuration
PORT=8000
HOST=0.0.0.0 